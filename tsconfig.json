{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": false,
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "target": "ES2019",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2019",
            "dom"
        ]
    },
    "exclude": [
        "dist/**/*",
        "tests/**/*"
    ]
}
